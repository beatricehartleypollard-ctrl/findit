# CocoaPods configuration for Flutter project
platform :ios, '15.5'

# Ensure frameworks are used (needed for Flutter plugins)
use_frameworks!
use_modular_headers!

# Path to Flutter application
flutter_application_path = File.expand_path('..', __dir__)
require File.expand_path(File.join(flutter_application_path, '.flutter', 'packages', 'flutter_tools', 'bin', 'podhelper'))

# Target section defines the iOS app target
target 'Runner' do
  flutter_ios_podfile_setup
end

# Post-install section ensures all iOS builds use iOS 15.5 or higher
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'
    end
  end
end
