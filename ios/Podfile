# CocoaPods configuration for Flutter
platform :ios, '15.5'

use_frameworks!
use_modular_headers!

# This line ensures the Flutter SDK is loaded correctly in CodeMagicâ€™s environment
require_relative '../flutter_tools/bin/podhelper'

flutter_ios_podfile_setup

target 'Runner' do
  flutter_additional_ios_build_settings(installer)
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'
    end
  end
end

